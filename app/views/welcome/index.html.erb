<div class="logo_one">
  <%= image_tag("iwmp_logo.jpg", :alt => "I Wet My Plants Cartoon", :height => "300", :style => "border-radius: 50%;") %>
</div>

<div class="logo_two">
  <%= image_tag("iwmp.jpg", :alt => "I Wet My Plants Logo", :height => "90", :style => "border-radius: 70%;") %>
